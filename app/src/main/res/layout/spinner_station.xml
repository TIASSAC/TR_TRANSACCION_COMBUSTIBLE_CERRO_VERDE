<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/round_outline_config">

    <ImageView
        android:id="@+id/CompartimientoSpinner"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_marginTop="7dp"
        android:layout_marginBottom="3dp"
        app:srcCompat="@drawable/station" />

    <TextView
        android:id="@+id/TextViewStationSpinner"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:gravity="center_vertical"
        android:layout_toEndOf="@+id/CompartimientoSpinner"
        android:layout_toRightOf="@+id/CompartimientoSpinner"
        android:paddingLeft="10dp"
        android:paddingRight="3dp"
        android:text="TextView"
        android:textColor="@color/black"
        android:textSize="28dp"
        android:textStyle="bold"/>

</RelativeLayout>